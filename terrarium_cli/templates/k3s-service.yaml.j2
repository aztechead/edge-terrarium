apiVersion: v1
kind: Service
metadata:
  name: {{ app.name }}
  namespace: {{ global_config.namespace }}
  labels:
    app: {{ app.name }}
    project: {{ global_config.project_name }}
spec:
  selector:
    app: {{ app.name }}
  ports:
  - port: {{ app.runtime.port }}
    targetPort: {{ app.runtime.port }}
    protocol: TCP
    name: http
  type: ClusterIP
